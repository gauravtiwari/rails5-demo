<%= content_tag :div, class: 'row' do %>
  <%= form_for(room, html: { class: 'col s6' }) do |f| %>
    <% if room.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

        <ul>
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="input-field">
        <%= f.text_field :name, placeholder: "Enter room name" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.text_area :description, class: 'materialize-textarea', placeholder: "Enter room description" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Create room',  class: 'btn waves-effect waves-light' %>
    </div>
  <% end %>
<% end %>
